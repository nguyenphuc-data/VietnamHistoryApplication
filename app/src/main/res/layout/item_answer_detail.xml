<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="16dp"
    android:background="#F8F8F8"
    android:backgroundTint="#F8F8F8">

    <!-- Số câu + câu hỏi -->
    <TextView
        android:id="@+id/tv_question_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Câu 1:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#3A3A3A" />

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Câu hỏi ở đây"
        android:textSize="15sp"
        android:textColor="#3A3A3A"
        android:layout_marginTop="4dp" />

    <!-- 4 đáp án -->
    <TextView
        android:id="@+id/tv_option_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A. Đáp án A"
        android:textSize="14sp"
        android:padding="10dp"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF" />

    <TextView
        android:id="@+id/tv_option_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="B. Đáp án B"
        android:textSize="14sp"
        android:padding="10dp"
        android:background="#FFFFFF" />

    <TextView
        android:id="@+id/tv_option_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C. Đáp án C"
        android:textSize="14sp"
        android:padding="10dp"
        android:background="#FFFFFF" />

    <TextView
        android:id="@+id/tv_option_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="D. Đáp án D"
        android:textSize="14sp"
        android:padding="10dp"
        android:background="#FFFFFF" />

</LinearLayout>