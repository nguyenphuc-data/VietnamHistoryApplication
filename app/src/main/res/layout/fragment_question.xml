<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <!-- Thanh trên: Thời gian và Câu số -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="16dp">

        <TextView
            android:id="@+id/tv_question_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Câu 1"
            android:textColor="#E8582B"
            android:textStyle="bold"
            android:textSize="28sp"
            android:fontFamily="sans-serif-medium"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:30"
            android:textColor="#E8582B"
            android:textStyle="bold"
            android:textSize="22sp"
            android:fontFamily="sans-serif-medium"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="98dp"
        android:padding="16dp"/>


    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/quiz_options_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:singleSelection="true"
        app:selectionRequired="false"
        android:layout_marginVertical="18dp"
        android:padding="16dp"
        android:layout_marginBottom="24dp">

        <!-- Nút A -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_option_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đáp án A"
            android:textColor="#3E2A5E"
            android:textSize="16sp"
            app:backgroundTint="#FFFFFF"
            app:strokeColor="#C8A2FF"
            app:strokeWidth="2dp"
            app:cornerRadius="16dp"
            android:elevation="3dp"
            android:layout_marginVertical="8dp"
            android:paddingVertical="12dp"
            android:fontFamily="sans-serif-medium" />

        <!-- Nút B -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_option_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đáp án B"
            android:textColor="#3E2A5E"
            android:textSize="16sp"
            app:backgroundTint="#FFFFFF"
            app:strokeColor="#C8A2FF"
            app:strokeWidth="2dp"
            app:cornerRadius="16dp"
            android:elevation="3dp"
            android:layout_marginVertical="8dp"
            android:paddingVertical="12dp"
            android:fontFamily="sans-serif-medium" />

        <!-- Nút C -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_option_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đáp án C"
            android:textColor="#3E2A5E"
            android:textSize="16sp"
            app:backgroundTint="#FFFFFF"
            app:strokeColor="#C8A2FF"
            app:strokeWidth="2dp"
            app:cornerRadius="16dp"
            android:elevation="3dp"
            android:layout_marginVertical="8dp"
            android:paddingVertical="12dp"
            android:fontFamily="sans-serif-medium" />

        <!-- Nút D -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_option_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đáp án D"
            android:textColor="#3E2A5E"
            android:textSize="16sp"
            app:backgroundTint="#FFFFFF"
            app:strokeColor="#C8A2FF"
            app:strokeWidth="2dp"
            app:cornerRadius="16dp"
            android:elevation="3dp"
            android:layout_marginVertical="8dp"
            android:paddingVertical="12dp"
            android:fontFamily="sans-serif-medium" />

    </com.google.android.material.button.MaterialButtonToggleGroup>





    <LinearLayout
        android:id="@+id/layout_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="48dp"
        android:padding="16dp"
        android:background="@drawable/layout_result_background"
        android:elevation="4dp"
        android:backgroundTintMode="src_over"
        android:visibility="gone"
        >

        <!-- Hàng trên cùng: Kết quả & Nút Tiếp -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_result"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Đúng rồi!"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:gravity="start" />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiếp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#E8582B"

                android:minWidth="80dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="6dp"
                android:textStyle="bold"
                android:layout_gravity="end" />
        </LinearLayout>

        <!-- Đường kẻ phân chia -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginBottom="12dp" />

        <!-- Hiển thị đáp án đúng -->
        <TextView
            android:id="@+id/tv_correct_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đáp án đúng:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="4dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_correct_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#E8582B"
            android:gravity="center"
            android:layout_marginTop="4dp" />

        <!-- Giải thích -->
        <TextView
            android:id="@+id/tv_explanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:padding="12dp"
            android:background="#F0F0F0"
            android:elevation="2dp"
            android:clipToOutline="true"
            android:backgroundTintMode="src_over"
            android:layout_marginBottom="8dp" />

    </LinearLayout>


</LinearLayout>