<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground"
    android:padding="24dp">

    <!-- NÚT EDIT + LOGOUT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginBottom="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEdit"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chỉnh sửa"
            android:textSize="14sp"
            app:iconGravity="start"
            app:iconPadding="6dp"
            android:layout_marginEnd="12dp"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng xuất"
            android:textSize="14sp"
            android:textColor="@android:color/holo_red_light"
            app:iconGravity="start"
            app:iconPadding="6dp"
            app:cornerRadius="12dp"
            app:iconTint="@android:color/holo_red_light" />
    </LinearLayout>

    <!-- CARD THÔNG TIN -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="28dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="?attr/colorSurface"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="32dp">

            <!-- AVATAR TRÒN - DÙNG CircleImageView -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProfilePhoto"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/avatar"
                app:civ_border_width="3dp"
                app:civ_border_color="#FFFFFF"
                android:elevation="6dp" />

            <!-- TÊN -->
            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Tên người dùng"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface" />

            <!-- EMAIL -->
            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="email@example.com"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:drawablePadding="8dp"
                android:gravity="center_vertical" />

            <!-- NÚT DIỄN ĐÀN -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnForum"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_margin="24dp"
                android:text="DIỄN ĐÀN LỊCH SỬ"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:backgroundTint="@null"
                android:background="@drawable/ripple_forum_button"
                app:icon="@drawable/ic_forum"
                app:iconGravity="start"
                app:iconPadding="12dp"
                app:iconTint="@android:color/white"
                app:cornerRadius="16dp"
                app:elevation="8dp"
                app:strokeColor="#FF6B35"
                app:strokeWidth="1.5dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>