<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".person.PersonList.PersonListFragment">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@android:color/white">

        <!-- 🔹 Thanh tiêu đề -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <!-- Nút mũi tên quay về -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_period"
                app:backgroundTint="#B2B2B2"
                app:tint="#3a3a3a"
                app:fabCustomSize="34dp" />

            <!-- Tiêu đề căn giữa -->
            <TextView
                android:id="@+id/tvTitleBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Nhân vật lịch sử"
                android:textColor="#E8582B"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- View trống để giữ chữ giữa màn hình -->
            <View
                android:layout_width="34dp"
                android:layout_height="34dp" />
        </LinearLayout>

        <!-- 🔹 RecyclerView hiển thị danh sách nhân vật -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewPersonList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp" />

        <!-- 🔹 TextView hiển thị khi không có dữ liệu -->
        <TextView
            android:id="@+id/tvNoPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Không có persons để hiển thị"
            android:visibility="gone"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:padding="16dp" />

    </LinearLayout>


</FrameLayout>