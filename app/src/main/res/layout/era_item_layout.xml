<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk-res-aut"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <ImageView
                android:id="@+id/imgThumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/placeholder" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_overlay" />

            <TextView
                android:id="@+id/tvEraName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="16dp"
                android:text="Nhà Trần"
                android:textColor="#F7F3ED"
                android:textSize="26sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="#F5F5F5">

            <TextView
                android:id="@+id/tvShortDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chống quân Nguyên Mông 3 lần"
                android:textColor="#555555"
                android:textSize="15sp"
                android:lineSpacingExtra="4dp"
                android:maxLines="2"
                android:ellipsize="end" />

            <Button
                android:id="@+id/btnPlay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:text="CHƠI NGAY"
                android:textStyle="bold"
                android:textColor="#F5F5F5"
                android:backgroundTint="#E8582B"
                android:fontFamily="sans-serif-medium"
                app:cornerRadius="14dp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>