<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120dp"
    android:layout_height="180dp"
    android:layout_marginEnd="8dp"
    android:elevation="4dp">
    <ImageView
    android:id="@+id/ivCardImage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/card"
    android:scaleType="fitXY"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvCardName"
        android:layout_width="102dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:text="Tên Sự Kiện"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/ivCardImage"
        app:layout_constraintStart_toStartOf="@id/ivCardImage"
        app:layout_constraintTop_toTopOf="@id/ivCardImage"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/tvCardDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:maxLines="6"
        android:padding="4dp"
        android:text="Mô tả tóm tắt sự kiện..."
        android:textColor="#CCCCCC"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/ivCardImage"
        app:layout_constraintStart_toStartOf="@id/ivCardImage"
        app:layout_constraintTop_toBottomOf="@id/tvCardName"
        app:layout_constraintWidth_percent="0.85" />

</androidx.constraintlayout.widget.ConstraintLayout>