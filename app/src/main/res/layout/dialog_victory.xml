<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_victory_bg"
    android:elevation="24dp"
    android:outlineAmbientShadowColor="#80000000"
    android:outlineSpotShadowColor="#80000000"
    android:padding="32dp">

    <!-- Tiêu đề vàng rực rỡ -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="XUẤT SẮC!"
        android:textSize="42sp"
        android:textColor="#E8582B"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:shadowColor="#80000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="8"
        android:layout_marginBottom="16dp" />

    <!-- Nội dung -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bạn đã sắp xếp đúng toàn bộ dòng thời gian!\nLịch sử Việt Nam được bảo vệ!"
        android:textSize="19sp"
        android:textColor="#333333"
        android:gravity="center"
        android:lineSpacingExtra="6dp"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/tv_correct_answers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#4CAF50"
        android:background="#11000000"
        android:padding="16dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        android:text="Đang tải đáp án..." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnReplay"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:text="Chơi lại"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_victory"
            android:layout_marginEnd="20dp"
            android:elevation="8dp" />

        <Button
            android:id="@+id/btnMenu"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:text="Menu"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_menu"
            android:elevation="8dp" />
    </LinearLayout>
</LinearLayout>