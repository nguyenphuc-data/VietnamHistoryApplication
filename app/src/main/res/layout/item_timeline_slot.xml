<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="140dp"
    android:layout_marginEnd="4dp"
    android:elevation="2dp"
    android:layout_marginBottom="2dp">

    <!-- Nền lá bài (Sử dụng card, kích thước nhỏ) -->
    <ImageView
        android:id="@+id/ivCardImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/card"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/tvSlotName"
        android:layout_width="84dp"
        android:layout_height="28dp"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="Sự Kiện"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/ivCardImage"
        app:layout_constraintStart_toStartOf="@id/ivCardImage"
        app:layout_constraintTop_toTopOf="@id/ivCardImage"
        app:layout_constraintWidth_percent="0.85" />

    <TextView
        android:id="@+id/tvSlotYear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="Năm"
        android:textColor="#FFC107"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/ivCardImage"
        app:layout_constraintStart_toStartOf="@id/ivCardImage"
        app:layout_constraintTop_toBottomOf="@id/tvSlotName"
        app:layout_constraintWidth_percent="0.85"/>

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="4dp"
        android:background="#FFC107"
        app:layout_constraintEnd_toEndOf="@id/ivCardImage"
        app:layout_constraintStart_toStartOf="@id/ivCardImage"
        app:layout_constraintTop_toBottomOf="@id/tvSlotYear"
        app:layout_constraintWidth_percent="0.8" />
    <TextView
        android:id="@+id/tvSlotDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="Mô tả tóm tắt..."
        android:textColor="#CCCCCC"
        android:textSize="8sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@id/ivCardImage"
        app:layout_constraintStart_toStartOf="@id/ivCardImage"
        app:layout_constraintTop_toBottomOf="@id/tvSlotYear"
        app:layout_constraintWidth_percent="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>