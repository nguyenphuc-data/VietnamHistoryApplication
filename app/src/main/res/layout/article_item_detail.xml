<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="12dp"
    app:strokeColor="#22555555"
    app:strokeWidth="1dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Mô tả diễn biến: bind từ events[i].details -->
        <TextView
            android:id="@+id/tvEventDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#222222"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp" />

        <!-- Ảnh diễn biến: bind từ events[i].image.link (gs:// hoặc https) -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgEvent"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"/>


        <!-- Chú thích ảnh: bind từ events[i].image.content -->
        <TextView
            android:id="@+id/tvImageCaption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="#6E6E6E"
            android:textSize="12sp" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
