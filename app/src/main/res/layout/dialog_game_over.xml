<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_game_over_bg"
    android:elevation="24dp"
    android:outlineAmbientShadowColor="#80000000"
    android:outlineSpotShadowColor="#80000000"
    android:padding="32dp">

    <!-- Tiêu đề đỏ cam mạnh mẽ -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="THẤT BẠI!"
        android:textSize="44sp"
        android:textColor="#E8582B"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:shadowColor="#80000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="8"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thành đã sụp đổ...\nKẻ xâm lược đã chiến thắng!"
        android:textSize="19sp"
        android:textColor="#444444"
        android:gravity="center"
        android:lineSpacingExtra="6dp"
        android:layout_marginBottom="32dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnReplay"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:text="Thử lại"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_retry"
            android:layout_marginEnd="20dp"
            android:elevation="8dp" />

        <Button
            android:id="@+id/btnMenu"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:text="Menu"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_menu_gray"
            android:elevation="8dp" />
    </LinearLayout>
</LinearLayout>