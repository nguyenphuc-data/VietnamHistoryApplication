<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- 🔹 Thanh tiêu đề -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <!-- Nút mũi tên quay về -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_period"
            app:backgroundTint="#B2B2B2"
            app:tint="#3a3a3a"
            app:fabCustomSize="34dp" />

        <!-- Tiêu đề căn giữa -->
        <TextView
            android:id="@+id/tvTitleBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Nhân vật lịch sử"
            android:textColor="#E8582B"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- View trống để giữ chữ giữa màn hình -->
        <View
            android:layout_width="34dp"
            android:layout_height="34dp" />
    </LinearLayout>

    <!-- ScrollView cho toàn bộ nội dung (ảnh + text) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Ảnh lớn của nhân vật (full width, không padding ngang) -->
            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop" />

            <!-- Nội dung text (có padding để không sát cạnh) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Tên nhân vật (trong card đơn giản) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical"
                    android:padding="0dp">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="35sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Mô tả ngắn (trong card) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:orientation="vertical"
                    android:padding="0dp">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_variable_font"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Line phân cách bên trên chữ "Giới thiệu" -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginBottom="16dp" />

                <!-- Section: Giới thiệu -->
                <TextView
                    android:id="@+id/intro_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Giới thiệu"
                    android:textColor="#E8582B"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvOverview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp" />

                <!-- Section: Thành tựu (Expandable với arrow) -->
                <LinearLayout
                    android:id="@+id/layout_achievements_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/achievements_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Thành tựu"
                        android:textColor="#E8582B"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/ivAchievementArrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down"
                        android:contentDescription="Mở rộng Thành tựu" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvAchievements"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:paddingStart="16dp"
                    android:visibility="gone" />

                <!-- Section: Tóm tắt cuộc đời (Expandable với arrow) -->
                <LinearLayout
                    android:id="@+id/layout_lifetime_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/summary_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tóm tắt cuộc đời"
                        android:textColor="#E8582B"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/ivLifetimeArrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down"
                        android:contentDescription="Mở rộng Tóm tắt cuộc đời" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvLifetime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:lineSpacingExtra="6dp"
                    android:paddingStart="16dp"
                    android:visibility="gone" />

                <!-- Section: Sự kiện tham gia (Expandable với LinearLayout) -->
                <LinearLayout
                    android:id="@+id/layout_events_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sự kiện tham gia"
                        android:textColor="#E8582B"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/ivEventsArrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down"
                        android:contentDescription="Mở rộng Sự kiện tham gia" />
                </LinearLayout>

                <!-- 🔹 Thêm đoạn thông báo hướng dẫn -->
                <TextView
                    android:id="@+id/tvEventHint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="👉 Nhấn vào từng sự kiện bên dưới để xem chi tiết."
                    android:textColor="#777777"
                    android:textSize="14sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" /> <!-- bạn có thể set VISIBLE khi mở phần sự kiện -->

                <!-- Danh sách sự kiện -->
                <LinearLayout
                    android:id="@+id/events_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:visibility="gone" />


                <!-- Section: YouTube Video -->
                <LinearLayout
                    android:id="@+id/youtube"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Có thể bạn muốn xem"
                        android:textColor="#E8582B"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvVideoContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:paddingStart="16dp"
                    android:visibility="gone" />

                <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                    android:id="@+id/ytPlayer"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginBottom="24dp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>